/* components/BaseMovement/BaseMovement.wxss */
.base-movement-wrap{
    margin: 40rpx auto; 
    width: 96%;
    border-radius: 10rpx;
    /* background: #ffffff; */
    background: linear-gradient(to bottom right,#edf0fa,#98b8f3);
}
.top-line{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 40rpx 20rpx 40rpx;
}
.line{
    display: flex;
    line-height: 68rpx;
    align-items: center;
    justify-content: left;
    padding: 20rpx 40rpx 0rpx 40rpx;
}
.line-item{
    margin-right: 30rpx;
    padding-right: 10rpx;
    width: 30%;
    display: flex;
    align-items: center;
    height: 68rpx;
    line-height: 68rpx;
    /* background: #d4f3ea; */
    background: #ffffff;
    /* background: linear-gradient(to bottom right,#effaf7,#d4f3ea); */
}
.line-icon{
    margin-top: 10rpx;
    text-align: right;
    padding-right: 20rpx;
}
.action-add{
    width: 46rpx;
    height: 46rpx;
}
.action-input{
    height: 80rpx;
    line-height: 80rpx;
}
.timer{
    margin-left:40rpx;
    margin-right: 80rpx;
    width: 80rpx;
    height: 80rpx;
}
.time-icon{
    width: 100%;
    height: 100%;
}
.action-name{
    margin-right: 10rpx;
    flex: 1;
    padding-left: 24rpx;
    height: 80rpx;
    line-height: 80rpx;
    background:  #9dd6c5;
    background: #ffffff;
    /* background: linear-gradient(to bottom right,#edf0fa,#98b8f3); */
}

.action-text{
    color: #b9b9b9;
}
