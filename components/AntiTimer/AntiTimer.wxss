/* components/AntiTimer/AntiTimer.wxss */
.anti-timer-container{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
    position: relative;
}
.bg-black{
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
}
.timer{
    z-index: 10;
    /* height: 360rpx; */
    font-size: 160rpx;
    color: #ffffff;
    text-align: center;
}
.btn{
    margin: 30rpx auto;
    width: 150rpx;
    height: 150rpx;
    text-align: center;
    line-height: 150rpx;
    border-radius: 50% 50%;
    background: rgba(111, 196, 139, 0.8);
    color: #38e616;
    font-size: 36rpx;
    border: #ccfcc0 4px solid;
}